// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet
{
    "name": "C# (.NET)",
    "image": "mcr.microsoft.com/devcontainers/dotnet:1-9.0-bookworm",
    
    // Mount SSH agent socket
    "mounts": [
        "source=${localEnv:SSH_AUTH_SOCK},target=/ssh-agent,type=bind,consistency=cached"
    ],
    
    // Set SSH_AUTH_SOCK inside container
    "containerEnv": {
        "SSH_AUTH_SOCK": "/ssh-agent"
    },
    
    // Git feature
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },
    
    // VS Code extensions
    "customizations": {
        "vscode": {
            "extensions": [
                "eamodio.gitlens",
                "ms-dotnettools.csharp",
                "ms-dotnettools.csdevkit",
                "ms-dotnettools.vscode-dotnet-pack"
            ]
        }
    },
    
    // Setup Git config after container creation
    "postCreateCommand": "git config --global user.name 'Jaysen' && git config --global user.email 'jaysen@gmail.com'",

    // Run as root to avoid permission issues
    "remoteUser": "root"
}